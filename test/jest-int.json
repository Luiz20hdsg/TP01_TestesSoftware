{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../",
    "modulePaths": ["<rootDir>/src"],
    "testEnvironment": "node",
    "testRegex": ".int-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "src/(.*)": "<rootDir>/src/$1",
        "test/(.*)": "<rootDir>/test/$1",
        "@core/(.*)": "<rootDir>/src/core/$1",
        "@infra/(.*)": "<rootDir>/src/infra/$1",
        "@helpers/(.*)": "<rootDir>/src/helpers/$1",
        "@test/(.*)": "<rootDir>/test/$1"
    }
}
